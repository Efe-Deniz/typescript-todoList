{
    // Visit https://aka.ms/tsconfig to read more about this file

    "compilerOptions": {
        "target": "ES2020", // Modern JavaScript'e çevir
        "module": "ES2015", // ES Module kullan
        "outDir": "./dist", // JavaScript dosyaları dist/ klasörüne
        "rootDir": "./src", // TypeScript dosyaları src/ klasöründe
        "strict": true, // Katı tip kontrolü (önerilen)
        "esModuleInterop": true, // Import/export uyumluluğu
        "skipLibCheck": true, // Kütüphane dosyalarını kontrol etme (hızlandırır)
        "forceConsistentCasingInFileNames": true // Dosya adı büyük/küçük harf tutarlılığı
    },
    "include": ["src/**/*"], // Hangi dosyalar compile edilsin
    "exclude": ["node_modules"] // Hangi klasörler hariç
}
